FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y     fonts-farsiweb     && rm -rf /var/lib/apt/lists/*

COPY requirements.in requirements-dev.in constraints.txt constraints-dev.txt ./
COPY scripts ./scripts
RUN python -m scripts.deps.ensure_lock --root . install --attempts 3
RUN python -m pip install --no-cache-dir --no-deps -e .

RUN mkdir -p /app/test-results

COPY . .

RUN mkdir -p /root/.config/matplotlib
COPY assets/fonts/matplotlibrc /root/.config/matplotlib/matplotlibrc

CMD ["pytest"]
