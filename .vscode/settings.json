{
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--strict-markers",
        "--tb=short"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.formatting.provider": "ruff",
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/reports": true,
        "**/*.backup": true
    }
}
