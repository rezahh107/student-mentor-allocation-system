{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Verify Git Sync",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "git_sync_verifier.cli",
        "--path",
        "${workspaceFolder}",
        "--remote",
        "https://github.com/rezahh107/student-mentor-allocation-system.git",
        "--out",
        "${workspaceFolder}/artifacts",
        "--open-md"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Windows: Verify & Run",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/windows_shared/Invoke-WindowsReadiness.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
