{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server: Uvicorn (.env.dev)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "25119",
        "--reload",
        "--env-file",
        "${workspaceFolder}/.env.dev"
      ],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        }
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "‚úÖ Smoke Test",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/smoke.ps1"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Quick Test (Changed Files Only)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.adaptive_testing", "--mode=quick"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Standard Test (with Coverage)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.adaptive_testing", "--mode=standard"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Deep Test (with Mutation)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.adaptive_testing", "--mode=deep"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üîí Security Test",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.adaptive_testing", "--mode=security"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üåü Full Analysis",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.adaptive_testing", "--mode=full"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üì± Run Dashboard",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "streamlit", "run", "scripts/dashboard.py"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "üì¶ Run in Docker",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "docker-compose.test.yml", "up", "test-runner"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üß™ Generate Deep Tests",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "scripts.generate_tests"],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Security Dashboard",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "streamlit", "run", "scripts/security_dashboard.py"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
