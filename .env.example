# Environment (development|staging|production)
ENVIRONMENT=development

# === Redis (JSON-in-ENV with IMPORT_TO_SABT_ prefix) ===
IMPORT_TO_SABT_REDIS={"dsn":"redis://127.0.0.1:6379/0"}

# === PostgreSQL (use psycopg driver) ===
IMPORT_TO_SABT_DATABASE={"dsn":"postgresql+psycopg://postgres:postgres@127.0.0.1:5432/postgres","statement_timeout_ms":5000}

# === Auth & Metrics ===
IMPORT_TO_SABT_AUTH={"service_token":"dev-admin","metrics_token":"dev-metrics"}
METRICS_TOKEN=dev-metrics

# === Docs security ===
# Leave false in production; set to true in dev/CI to surface /docs and /redoc
IMPORT_TO_SABT_SECURITY__PUBLIC_DOCS=false

# === Observability (optional) ===
# IMPORT_TO_SABT_OBSERVABILITY={"service_name":"import_to_sabt","metrics_namespace":"import_to_sabt","log_level":"INFO"}

# === Rate limiting (optional) ===
# IMPORT_TO_SABT_RATELIMIT={"namespace":"imports","requests":30,"window_seconds":60,"penalty_seconds":120}

# === App (optional) ===
# IMPORT_TO_SABT_TIMEZONE=Asia/Tehran
